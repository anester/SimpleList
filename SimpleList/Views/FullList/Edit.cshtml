@model SimpleListData.UserList

@{
    ViewBag.Title = "Edit";
    Layout = "~/userlist/Views/Shared/_MasterLayout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
