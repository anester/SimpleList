@model IEnumerable<SimpleListData.UserList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@section menuleft {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">User Lists <b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (SimpleListData.UserList item in Model)
            {
                <li>@Html.ActionLink(@item.UserListName, "Index")</li>
            }
        </ul>
    </li>
}

@section featured {
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-xs btn-default" id="newlistbtn">New</button>
                <button type="button" class="btn btn-xs btn-default" id="downloadlistbtn">Download</button>
                <button type="button" class="btn btn-xs btn-default" id="filterlistbtn">Filter</button>
            </div>
            <div class="col-md-3">
                <label>Name:</label>
                <input name="filter-list-name" id="listnameipt"></input>
            </div>
            <div class="col-md-3">
                <label>Date:</label>
                <input name="filter-list-name" id="listdateipt"></input>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
    </div>
}

<h2>Index</h2>
<div id="creatediv" class=""></div>

<div class="row user-list-container">
    @Html.Partial("ListOfUserListPart", Model)
</div>

@section scripts {
    <link href="~/Content/themes/base/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    <script src="~/Scripts/Views/List/Index.js"></script>
}